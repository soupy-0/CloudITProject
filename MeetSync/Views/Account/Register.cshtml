@model MeetSync.Models.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Register - MeetSync";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Tamma+2:wght@400..800&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/site.css" />
</head>

<body>
    <div class="header">
        <div class="top-nav">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("MyProfile", "Home")">My Profile</a></li>
                <li><a href="@Url.Action("About", "Home")">About</a></li>
                <li><a href="@Url.Action("Login", "Account")">Login</a></li>
            </ul>
            <button>Contact Us</button>
        </div>
        
        <div class="surface">
            <h1>Join MeetSync</h1>
            
            <form asp-action="Register" method="post" style="max-width: 500px; margin: 0 auto;">
                @Html.AntiForgeryToken()
                
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>      

                <div class="form-group">
                    <label asp-for="Name">Full Name:</label>
                    <input asp-for="Name" type="text" class="form-input" />
                    <span asp-validation-for="Name" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="email" class="form-input" />
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>

                 <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" type="password" class="form-input" />
                    <span asp-validation-for="Password" class="validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password:</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-input" />
                    <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Workplace">Workplace (Optional):</label>
                    <input asp-for="Workplace" type="text" class="form-input" />
                </div>
                
                <div class="form-group">
                    <label asp-for="AboutSection">About You (Optional):</label>
                    <textarea asp-for="AboutSection" rows="3" class="form-input form-textarea"></textarea>
                </div>
                
                <div class="form-group">
                    <label asp-for="Interests">Interests (comma-separated):</label>
                    <input asp-for="Interests" type="text" class="form-input" placeholder="e.g., JavaScript, Design, Marketing" />
                </div>
                
                <button type="submit" class="submit-button">Create Account</button>   

                <p class="register-link">
                    Already have an account? <a href="@Url.Action("Login", "Account")">Login here</a>
                </p>

            </form>
        </div>
    </div>
    <script src="~/gradientAnimation.js"></script>
</body>